<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nimish.myportfolio.MyAppPortfolio"
    tools:showIn="@layout/activity_my_app_portfolio">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_margin="45dp"
        android:textSize="26sp"/>
    <Button
        android:id="@+id/next_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:text="SPOTIFY STREAMER"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:layout_margin="5dp"
        android:layout_marginTop="30dp"
        android:onClick="buttonClicked"
        android:background="#F08C35"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/second_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:background="#F08C35"
        android:text="SCORES APP"
        android:layout_below="@+id/next_button"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:layout_margin="5dp"
        android:onClick="buttonClicked"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/third_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="#F08C35"
        android:gravity="center_horizontal"
        android:text="LIBRARY APP"
        android:onClick="buttonClicked"
        android:layout_below="@+id/second_button"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:layout_margin="5dp"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/fourth_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="#F08C35"
        android:onClick="buttonClicked"
        android:gravity="center_horizontal"
        android:text="BUILD IT BIGGER"
        android:layout_below="@+id/third_button"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:layout_margin="5dp"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/fifth_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:onClick="buttonClicked"
        android:background="#F08C35"
        android:gravity="center_horizontal"
        android:text="XYZ READER"
        android:layout_below="@+id/fourth_button"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:layout_margin="5dp"
        android:textSize="18sp"/>


    <Button
        android:id="@+id/sixth_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:text="CAPSTONE:MY OWN APP"
        android:onClick="buttonClicked"
        android:layout_below="@+id/fifth_button"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:layout_margin="5dp"
        android:background="#C2185B"
        android:textSize="18sp"
        />


</RelativeLayout>
